<!doctype html>
<!--
    Welcome fellow view-source enthusiast!

    You can find the source code for my website on GitHub
    https://github.com/carlrafting/carlrafting.com/
-->
<html lang="{{ site.lang }}">
<meta charset="utf-8">
<title>
{{ if it.title }}
{{ title }} &mdash; {{ site.title }}
{{ else }}
{{ site.title }}
{{ /if }}
</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
{{ if it.description }}
<meta name="description" content="{{ description }}">
{{ else }}
<meta name="description" content="{{ site.description }}">
{{ /if }}
<link rel="canonical" href="{{ site.url }}{{ url }}">
<link rel="me" href="https://mas.to/@carlrafting">
{{ if it.license }}
<link rel="license" href="{{ license.url }}">
{{ /if }}
<style media="all">
{{ include "../../css/global/all.css" }}
</style>
<style media="screen">
{{ include "../../css/global/screen.css" }}
</style>
<link rel="stylesheet" href="/css/global/print.css" media="print">
{{ content }}
